<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Med_Reminder.LoginPage"
             Title="Login">

    <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Padding="20" BackgroundColor="White">
        <Label Text="Witamy w Med-Reminder!" FontSize="Header" FontAttributes="Bold" TextColor="{StaticResource TextColor}"/>
        <Label Text="Zaloguj się lub utwórz konto" FontSize="Medium"  Margin="0,10,0,0"/>
        <Entry Placeholder="email@domain.com" x:Name="EmailEntry" WidthRequest="300" HeightRequest="50"  Margin="0,10,0,0" FontSize="Small"/>
        <Entry Placeholder="Hasło" IsPassword="True" x:Name="PasswordEntry" WidthRequest="300" HeightRequest="50" Margin="0,10,0,0" FontSize="Small"/>
        <Button Text="Zaloguj się" Clicked="LoginButton_Clicked" WidthRequest="300" HeightRequest="50" FontAttributes="Bold"  Margin="0,10,0,0" BackgroundColor="#89CFF0" FontSize="Medium"/>
        <Label Text="lub" FontSize="Small" FontAttributes="Bold"  Margin="0,10,0,0"/>
        <Button Text="Zarejestruj się" Clicked="RegisterButton_Clicked"  BackgroundColor="#C6FCFF" FontSize="Medium" WidthRequest="300" HeightRequest="50" FontAttributes="Bold" TextColor="Black"  Margin="0,10,0,0"/>
    </StackLayout>

</ContentPage>